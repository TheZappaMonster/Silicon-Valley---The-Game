int stage;

PImage startButton;
PImage Background;
PImage FuckCursor;

PFont characterText;

import ddf.minim.*;

Minim minim;
AudioPlayer player;

boolean sketchFullScreen(){
  return true;
}


void setup() {
 stage = 1;
 frameRate(60);
 size(1440, 900);
 
 Background = loadImage("yuco_silicon_valley_featured.jpg");
 image(Background, 0, 0, 1440, 900);
 startButton = loadImage("New_game_button.jpg");
 FuckCursor = loadImage("FuckCursor.png");
 
 characterText = createFont("BankGothic-Medium", 90, true);
 
 minim = new Minim(this);
 player = minim.loadFile("Silicon Valley Intro.mp3");
 smooth();
 player.loop();
}

void draw() {
  image(startButton, 525, 720);
  cursor(FuckCursor);
  
  if (stage == 1) {
    image(startButton, 525, 720);
    cursor(FuckCursor);
    if (keyPressed == true) {
      stage = 2;
      player.close();
    }
  }







